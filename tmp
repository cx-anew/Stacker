
// DEFAULT SCREEN SET
window.addEventListener('load', function new_items() {
    // NONE -> BLOCK
    let new_items = document.getElementById('new_items')
    new_items.classList.remove('d-none')
    new_items.classList.add('d-block')

    // BLOCK -> NONE
    let out = document.querySelector('#out_items')
    out.classList.remove('d-block')
    out.classList.add('d-none')

    // BLOCK -> NONE
    let raport = document.querySelector('#create_raport')
    raport.classList.remove('d-block')
    raport.classList.add('d-none')
})

// NEW ITEMS SCREEN
new_eq = document.querySelector('#new_eq')
new_eq.addEventListener('click', function new_items() {
    // NONE -> BLOCK
    let new_items = document.getElementById('new_items')
    new_items.classList.remove('d-none')
    new_items.classList.add('d-block')

    // BLOCK -> NONE
    let out = document.querySelector('#out_items')
    out.classList.remove('d-block')
    out.classList.add('d-none')

    // BLOCK -> NONE
    let raport = document.querySelector('#create_raport')
    raport.classList.remove('d-block')
    raport.classList.add('d-none')

    switcher(this.id)
})

// OUT ITEMS SCREEN
out = document.querySelector('#out')
out.addEventListener('click', function new_items() {
    // BLOCK -> NONE
    let new_items = document.getElementById('new_items')
    new_items.classList.remove('d-block')
    new_items.classList.add('d-none')

    // NONE -> BLOCK
    let out = document.querySelector('#out_items')
    out.classList.remove('d-none')
    out.classList.add('d-block')

    // BLOCK -> NONE
    let raport = document.querySelector('#create_raport')
    raport.classList.remove('d-block')
    raport.classList.add('d-none')

    switcher(this.id)
})

// RAPORT SCREEN
raport = document.querySelector('#raport')
raport.addEventListener('click', function new_items() {
    // BLOCK -> NONE
    let new_items = document.getElementById('new_items')
    new_items.classList.remove('d-block')
    new_items.classList.add('d-none')

    // BLOCK -> NONE
    let out = document.querySelector('#out_items')
    out.classList.remove('d-block')
    out.classList.add('d-none')

    // NONE -> BLOCK
    let raport = document.querySelector('#create_raport')
    raport.classList.remove('d-none')
    raport.classList.add('d-block')

    switcher(this.id)
})